{
  "name": "streamlabs-auto-donation-check",
  "version": "1.0.0",
  "description": "Streamlabsのダッシュボード「最近のイベント」画面で確認ボタンを押していないドネートについて自動的に確認ボタンを押します。",
  "private": true,
  "scripts": {
    "watch": "webpack --mode=development --watch --config config/webpack.config.js",
    "build": "webpack --mode=production --config config/webpack.config.js",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\"",
    "pack": "crx3 build -p build.pem"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.7.3",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.7.2",
    "prettier": "^2.8.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-merge": "^5.8.0"
  }
}